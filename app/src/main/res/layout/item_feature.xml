<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/king_blue"
    app:cardCornerRadius="30dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_feature_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_feature_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="feature/login"
            android:textColor="@color/orange"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/item_feature_constraintLayout"
            app:layout_constraintEnd_toEndOf="@id/item_feature_constraintLayout"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="@id/item_feature_constraintLayout"
            app:layout_constraintTop_toTopOf="@id/item_feature_constraintLayout"
            app:layout_constraintVertical_bias="0.12"
            app:textAllCaps="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_feature_function"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/primary_light"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/item_feature_constraintLayout"
            app:layout_constraintEnd_toEndOf="@id/item_feature_constraintLayout"
            app:layout_constraintStart_toStartOf="@id/item_feature_constraintLayout"
            app:layout_constraintTop_toBottomOf="@id/item_feature_name"
            app:layout_constraintVertical_bias="0.01" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_feature_ivGit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@android:color/transparent"
            android:src="@drawable/git"
            app:layout_constraintBottom_toBottomOf="@id/item_feature_constraintLayout"
            app:layout_constraintEnd_toEndOf="@id/item_feature_constraintLayout"
            app:layout_constraintHorizontal_bias=".9"
            app:layout_constraintStart_toStartOf="@id/item_feature_constraintLayout"
            app:layout_constraintTop_toTopOf="@id/item_feature_constraintLayout"
            app:layout_constraintVertical_bias=".9"
            tools:layout_editor_absoluteX="338dp"
            tools:layout_editor_absoluteY="104dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>