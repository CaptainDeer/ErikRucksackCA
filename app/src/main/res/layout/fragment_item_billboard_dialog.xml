<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_gravity="center"
    android:background="@color/primary_dark"
    tools:context=".ui.itembillboard.ItemBillboardDialog">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemBillboard_dialog_iv"
        android:layout_width="140dp"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        android:background="@color/king_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemBillboard_dialog_tvTagTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:textColor="@color/primary_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toEndOf="@id/itemBillboard_dialog_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemBillboard_dialog_tvTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="8dp"
        android:textColor="@color/primary_light"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".1"
        app:layout_constraintStart_toEndOf="@id/itemBillboard_dialog_tvTagTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemBillboard_dialog_tvTagEpisodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Episodes:"
        android:textColor="@color/primary_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toEndOf="@id/itemBillboard_dialog_iv"
        app:layout_constraintTop_toBottomOf="@id/itemBillboard_dialog_tvTitle"
        app:layout_constraintVertical_bias="0.05" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemBillboard_dialog_tvEpisodes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="8dp"
        android:textColor="@color/primary_light"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemBillboard_dialog_tvTagEpisodes"
        app:layout_constraintTop_toBottomOf="@id/itemBillboard_dialog_tvTitle"
        app:layout_constraintVertical_bias="0.058" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemBillboard_dialog_tvTagScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:textColor="@color/primary_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toEndOf="@id/itemBillboard_dialog_iv"
        app:layout_constraintTop_toBottomOf="@id/itemBillboard_dialog_tvEpisodes"
        app:layout_constraintVertical_bias="0.05" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemBillboard_dialog_tvScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="8dp"
        android:textColor="@color/primary_light"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemBillboard_dialog_tvTagScore"
        app:layout_constraintTop_toBottomOf="@id/itemBillboard_dialog_tvEpisodes"
        app:layout_constraintVertical_bias="0.062" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemBillboard_dialog_tvTagUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Url:"
        android:textColor="@color/primary_light"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toEndOf="@id/itemBillboard_dialog_iv"
        app:layout_constraintTop_toBottomOf="@id/itemBillboard_dialog_tvScore"
        app:layout_constraintVertical_bias="0.05" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemBillboard_dialog_tvUrl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="8dp"
        android:textColor="#2196F3"
        android:text="My Anime List"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemBillboard_dialog_tvTagUrl"
        app:layout_constraintTop_toBottomOf="@id/itemBillboard_dialog_tvScore"
        app:layout_constraintVertical_bias="0.068" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/itemBillboard_dialog_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Ok"
        android:background="@drawable/btn_rounded_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemBillboard_dialog_iv"
        app:layout_constraintTop_toBottomOf="@id/itemBillboard_dialog_tvTagUrl"
        app:layout_constraintVertical_bias="0.85" />


</androidx.constraintlayout.widget.ConstraintLayout>